generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:my_secure_password@prisma:5432/cookedcourse"
}

model User {
  id       String @id @default(cuid())
  clientId String @unique
}

model Syllabus {
  id       String @id @default(cuid())
  syllabus String
  unitId   String @unique
  unit     Unit   @relation(fields: [unitId], references: [id])
}

model Unit {
  id String @id @default(cuid())

  syllabus Syllabus?
  chapter  Chapter[]
}

model Chapter {
  id     String   @id @default(cuid())
  name   String
  topics String[]
  unitId String
  unit   Unit     @relation(fields: [unitId], references: [id])
}
